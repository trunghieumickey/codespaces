{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "ubuntu-22.04" }
	},
	"settings": {
		"files.exclude": {
			"**/.devcontainer": true
		},
		"workbench.colorTheme": "Default Dark+",
		"files.autoSave": "off",
		"window.menuBarVisibility": "classic",
		"files.insertFinalNewline": true,
    		"explorer.sortOrder": "type",
    		"search.sortOrder": "type"
	},
	"postCreateCommand": "sudo rm -rf /workspaces/codespaces/.git",
	"extensions": [],
	"remoteUser": "vscode",
	"features": {
		"desktop-lite": "latest",
		"powershell": "latest"
	}
}
