{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "ubuntu-24.04" }
	},
	"settings": {
		"files.exclude": {
			"**/.devcontainer": true
		},
		"workbench.colorTheme": "Default Dark Modern",
		"files.autoSave": "off",
		"window.menuBarVisibility": "classic",
		"files.insertFinalNewline": true,
    		"explorer.sortOrder": "type",
    		"search.sortOrder": "type",
		"terminal.integrated.defaultProfile.linux": "pwsh"
	},
	"postCreateCommand": "sudo bash -c 'curl -fsSL https://deb.nodesource.com/setup_current.x | bash - && rm -rf /workspaces/codespaces/.git && apt update && apt full-upgrade -y'",
	"extensions": [],
	"remoteUser": "vscode",
	"features": {
		"powershell": "latest",
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:latest": {
       			"packages": "build-essential,gdb,nodejs"
    		}
	}
}
